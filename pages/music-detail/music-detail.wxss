.wrapper {
  width: 100%;
  /* height: 100%; */
}
.main {
  width: 100%;
  height: 390rpx;
  background-color: #616467;
}

.mine {
  width: 750rpx;
  height: 200rpx;
}

.mine-pic {
  border-radius: 16rpx;
  width: 260rpx;
  height: 260rpx;
  margin-top: 46rpx;
  margin-left: 35rpx;
}

.mine-name {
  float: right 10rpx;
  position: absolute;
  margin-left: 22rpx;
  margin-top: 60rpx;
  color: white;
  font-size: 30rpx;
}

.mine-grade {
  position: absolute;
  margin-left: 40rpx;
  margin-top: 110rpx;
  color: white;
  font-size: 20rpx;
}

.des {
  background-color: #fff;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}

.my {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
}
.broadcast {
  margin-left:20rpx;
  width: 40rpx;
  height: 40rpx;
}

.my-name {
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}

.scroll {
  height: 800rpx;
  white-space: nowrap;
}

.scroll-box {
  display: inline-block;
  height: 280rpx;
  width: 218rpx;
  margin: 0 0 0 20rpx;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
  color: #000;
  position: relative;
}
.number{
  font-size: 30rpx;
  color:#878787;
  margin-right:38rpx;
  margin-bottom: 36rpx;
}
.all-container{
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: space-between;
}
.author-container{
  display: flex;
  flex-direction: column;
  flex:1;
  margin-bottom: 40rpx;
}
.music-name{
  color:#222223;
  margin-bottom: 10rpx;
}
.singer{
  font-size: 24rpx;
  color:#9A9A9A;
}
.play{
  width:40rpx;
  height:40rpx;
}
