/* pages/login/index.wxss */
.login-container{
  display: flex;
  flex-direction: column;
}
.wrapper-bd {
  height: 50vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form-login{
  display: flex;
  flex-wrap: wrap;
  padding:0 112rpx;
}
.login-img {
  width: 120rpx;
  height: 120rpx;
}

.weui-input{
  width: 100%;
  height: 70rpx;
  border-bottom: 1px solid rgba(255, 255, 255,.5);
  margin-bottom: 20rpx;
}
.verify-input{
  width: 66%;
  height: 70rpx;
  border-bottom: 1px solid rgba(255, 255, 255,.5);
  margin-bottom: 20rpx;
}
.verify-container{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.verify{
  width: 70rpx !important;
  height:15rpx;
}
.sendVerify{
  margin-left :20rpx !important;
  width:160rpx !important;
  height:70rpx;
  line-height: 70rpx;
  font-size: 22rpx;
  padding:0;
  color:#ccc
}
.loginIn{
  width:600rpx !important;
  margin-top: 30rpx;
  color:rgb(221, 50, 38);
  border-radius: 50rpx;
  font-weight: 500;
}
page{
  background-color: #C93D2D;
